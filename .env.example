# OpenRouter API Configuration
OPENROUTER_API_KEY=your_api_key_here

# Database Configuration
DATABASE_PATH=./pipeline.db
CACHE_ENABLED=true
CACHE_TTL_STAGE1=2592000  # 30 days in seconds
CACHE_TTL_STAGE2=604800   # 7 days in seconds

# Processing Configuration
MAX_BATCH_SIZE=500
MAX_RETRIES=3
RETRY_DELAY=1000  # milliseconds

# Rate Limiting (OpenRouter recommended limits)
REQUESTS_PER_MINUTE=600
REQUESTS_PER_HOUR=36000
BURST_SIZE=20
MAX_REQUESTS_PER_MINUTE=1200

# Cost-based Rate Limiting
COST_REQUESTS_PER_MINUTE=300
COST_REQUESTS_PER_HOUR=1000
COST_BURST_SIZE=10

# Stage-specific Rate Limiting
STAGE1_REQUESTS_PER_MINUTE=300
STAGE1_REQUESTS_PER_HOUR=18000
STAGE1_BURST_SIZE=10
STAGE2_REQUESTS_PER_MINUTE=300
STAGE2_REQUESTS_PER_HOUR=18000
STAGE2_BURST_SIZE=10

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/pipeline.log

# Ingress Configuration
INGRESS_BATCH_SIZE=1000
INGRESS_AUTO_PROCESS=false
INGRESS_CLEANUP_DAYS=30
DATABASE_POOL_SIZE=5

# Docker Configuration (optional)
DOCKER_IMAGE_NAME=korean-flashcard-pipeline
DOCKER_CONTAINER_NAME=flashcard-pipeline
DOCKER_PORT=8080